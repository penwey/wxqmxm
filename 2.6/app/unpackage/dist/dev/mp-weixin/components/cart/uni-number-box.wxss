
.uni-numbox {
	display: -webkit-inline-box;
	display: -webkit-inline-flex;
	display: -ms-inline-flexbox;
	display: inline-flex;
	-webkit-box-pack: start;
	-webkit-justify-content: flex-start;
	    -ms-flex-pack: start;
	        justify-content: flex-start;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	height: 50rpx;
	position: relative;
	border:1px solid #C0C0C0;
	border-radius: 8rpx;
}
.uni-numbox-minus,
.uni-numbox-plus {
	margin: 0;
	background-color: #f8f8f8;
	width: 50rpx;
	height: 50rpx;
	font-size: 30rpx;
	line-height: 50rpx;
	text-align: center;
	display: -webkit-inline-box;
	display: -webkit-inline-flex;
	display: -ms-inline-flexbox;
	display: inline-flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	    -ms-flex-pack: center;
	        justify-content: center;
	color: #333;
	position: relative;
}
.uni-numbox-value {
	position: relative;
	width: 50rpx;
	height: 50rpx;
	line-height: 50rpx;
	text-align: center;
	padding: 0;
	font-size: 30rpx;
	border-left:1px solid #C0C0C0;
	border-right:1px solid #C0C0C0;
}
.uni-numbox-disabled {
	color: #d6d6d6;
}

